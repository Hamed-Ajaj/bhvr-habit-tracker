{
  "name": "server",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "bun --watch run src/index.ts",
    "generate": "npx @better-auth/cli generate --config ./src/lib/auth.config.ts",
    "migrate": "npx @better-auth/cli migrate --config ./src/lib/auth.config.ts",
    "start": "bun run dist/index.js",
    "start:prod": "npm run generate && npm run migrate && bun run dist/index.js"
  },
  "dependencies": {
    "better-auth": "^1.3.4",
    "better-sqlite3": "^12.2.0",
    "hono": "^4.7.11",
    "shared": "workspace:*",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
